{% block CustomerType_row %}
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Customer</h3>
            <div class="box-tools pull-right">
                <button type="button" class="collection-remove btn btn-danger btn-sm" title="Delete element"><i class="fa fa-trash"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="box-body">
            <div class="col-sm-10">
                <div class="form-group row">                                      
                    <div class="col-md-6">
                        {% if form.name is defined %}
                            {{ form_row(form.name, {'help': 'The customer name is used for our reference only and is NOT disclosed to any customers'}) }}
                        {% endif %}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">                   
                            {{ form_row(form.industryVertical) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                            {{ form_row(form.functions) }}
                    </div>
                </div>                
                <div class="form-group row">
                    <div class="col-md-6">
                        {{ form_row(form.workPeriod) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        {% if form.totalSeats is defined %}
                            {{ form_row(form.totalSeats, {'help': 'Please provide the total number of seats used by this customer'}) }}
                        {% endif %}
                    </div>
                    <div class="col-md-4">
                        {% if form.percentageOfBusiness is defined  %}                        
                            {{ form_row(form.percentageOfBusiness, {'help': 'Please provide an estimate of what proportion of your business is attributed to this customer'}) }}
                        {% endif %}
                    </div>
                </div>   
                <div class="form-group row">
                    <div class="col-md-6">
                        {{ form_row(form.locations) }}                    
                    </div>
                </div>                           
            </div>
        </div>
    </div>
{% endblock %}